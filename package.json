{
  "name": "ledgerly",
  "version": "1.0.0",
  "description": "Personal finance management application",
  "scripts": {
    "test": "./scripts/test.sh unit",
    "test:unit": "./scripts/test.sh unit",
    "test:integration": "./scripts/test.sh integration",
    "test:all": "./scripts/test.sh all",
    "test:watch": "jest --watch --config=jest.config.ts",
    "test:coverage": "jest --config=jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register node_modules/.bin/jest --config=jest.config.ts --runInBand",
    "prisma:seed": "ts-node prisma/seed.ts",
    "secrets:setup": "./scripts/setup-aws-secrets.sh",
    "secrets:test": "./scripts/test-secrets-integration.sh",
    "secrets:list": "aws secretsmanager list-secrets --query 'SecretList[].Name' --output table",
    "start:dev": "NODE_ENV=development ts-node src/server.ts",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.810.0",
    "@aws-sdk/credential-provider-node": "^3.810.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "plaid": "^33.0.0",
    "sequelize": "^6.32.0",
    "winston": "^3.11.0",
    "winston-cloudwatch": "^3.0.1"
  }
}
